<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">

    <Space
        android:layout_width="10dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/total_sum"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="80sp"
        android:layout_gravity="center"
        android:gravity="end"
        android:textColor="@color/white"
        android:background="@color/green"/>

    <Space
        android:layout_width="10dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clearFunc"
            android:text="AC"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:background="@drawable/button_selector_red"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/plusMinus_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="toggleSignFunc"
            android:text="+/-"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_dark_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/modulo_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorFunc"
            android:text="%"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_dark_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/divide_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorFunc"
            android:text=":"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_dark_gray"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <Space
        android:layout_width="5dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="7"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="8"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="9"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/mult_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorFunc"
            android:text="X"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_dark_gray"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <Space
        android:layout_width="5dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="4"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="5"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="6"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/minus_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorFunc"
            android:text="-"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_dark_gray"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <Space
        android:layout_width="5dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="1"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="2"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="3"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorFunc"
            android:text="+"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_dark_gray"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>

    <Space
        android:layout_width="5dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numFunc"
            android:text="0"
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:onClick="numFunc"
            android:text="."
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_light_gray"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="5dp"/>

        <Button
            android:id="@+id/equal_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:onClick="equalsFunc"
            android:text="="
            android:textSize="50sp"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_orange"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>

</LinearLayout>